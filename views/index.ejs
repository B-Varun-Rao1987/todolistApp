<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO DO LIST</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
        }

        .container {
            align-items: center;
            height: 500px;
            width: 70%;

        }

        .enterTask {
            height: 30%;
            background-color: #977345;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            font-weight: 600;
            letter-spacing: 3px;
        }

        .taskList li {
            display: flex;
            justify-content: space-between;
            height: 45px;
            align-items: center;
        }

        .listText {
            font-size: 20px;
            margin-left: 10px;
        }

        .cross {
            margin-right: 10px;
        }

        .taskList li:nth-of-type(2n) {
            background-color: #f6f8fa;
        }

        .taskList li:nth-of-type(2n+1) {
            background-color: #e1e2e3
        }

        .title {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .enterTask h2 {
            font-size: 30px;
            margin-bottom: 10px;
        }

        .taskInputSubmit {
            width: 100%;
        }

        .taskTitle {
            display: inline-block;
            width: 80%;
            padding: 9px;
            border: none;
            font-size: 20px;
        }

        #addTask {
            padding: 9px 15px;
            font-size: 20px;
            background-color: #f0c63c;
            border: none;
            width: 10%;
            cursor: pointer;
            transition: background-color 500ms;
        }

        #addTask:hover {
            background-color: #e1ba38;
        }

        .taskList li .btns {
            width: 150px;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .editBtn {
            text-decoration: none;
            background-color: #e53e3e;
        }

        .delBtn,
        .editBtn {
            font-size: 16px;
            padding: 3px 12px;
            color: #f8f8f8;
            border: none;
            cursor: pointer;
            border-radius: 3px;
            text-align: center;
            width: 65px;
        }


        .delBtn {
            background-color: #58c166;
        }

        .editBtn:hover {
            background-color: #ce3737;
            transform: translateY(2%);
        }

        .delBtn:hover {
            background-color: #4db15b;
            transform: translateY(2%);
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="enterTask">
            <h2>To Do List</h2>
            <form action="/" class="taskInputSubmit" method="POST">
                <div class="title">
                    <input type="text" placeholder="Task..." class="taskTitle" name="todolist[title]">
                    <button id="addTask">Add</button>
                </div>
            </form>
        </div>
        <div>
            <ul class="taskList">
                <% for(let todolist of todolists) { %>
                    <li>
                        <span class="listText">
                            <%= todolist.title %>
                        </span>
                        <div class="btns">
                            <a href="/<%= todolist._id %>/edit" class="editBtn">Edit</a>
                            <form class="cross" action="/<%= todolist._id %>?_method=DELETE" method="POST">
                                <button class="delBtn">Delete</button>
                            </form>
                    </li>
                    <% } %>
        </div>
        </ul>
    </div>
    </div>
    <%- include('../partials/footer') %>